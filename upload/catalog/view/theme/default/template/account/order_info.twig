{{ header }}
<style>
  .order-info-products {
    border: 1px solid #C7DDE6;
    box-sizing: border-box;
    border-radius: 5px;
    padding: 10px;
  }
  .order-info-products-heading {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .order-info-products-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .order-info-products-row-left {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .order-info-products-row-left img {
    margin-right: 10px;
  }
</style>
<div id="account-order" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h2>{{ heading_title }}</h2>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td class="text-left" colspan="2">{{ text_order_detail }}</td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="text-left" style="width: 50%;">
              {% if invoice_no %}
                <b>{{ text_invoice_no }}</b> {{ invoice_no }}<br />
              {% endif %}
              <b>{{ text_order_id }}</b> #{{ order_id }}<br />
              <b>{{ text_date_added }}</b> {{ date_added }} <br>
              {{ payment_address }}
              {% if shipping_address %}
                {{ shipping_address }} <br>
              {% endif %}
            </td>
            <td class="text-left" style="width: 50%;">
              {% if payment_method %}
                <b>{{ text_payment_method }}</b> {{ payment_method }}<br />
              {% endif %}
              {% if shipping_method %}
                <b>{{ text_shipping_method }}</b> {{ shipping_method }}
              {% endif %}
              {% for total in totals %}
                <b>{{ total.title }}:</b> {{ total.text }} <br>
              {% endfor %}
            </td>
          </tr>
        </tbody>
      </table>
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td class="text-left">{{ column_name }}</td>
              <td class="text-left">{{ column_model }}</td>
              <td class="text-right">{{ column_quantity }}</td>
              <td class="text-right">{{ column_price }}</td>
              <td class="text-right">{{ column_total }}</td>
              {% if products %}
              <td style="width: 20px;"></td>
              {% endif %} </tr>
          </thead>
          <tbody>
          
          {% for product in products %}
          <tr>
            <td class="text-left">{{ product.name }}
              {% for option in product.option %} <br />
              &nbsp;<small> - {{ option.name }}: {{ option.value }}</small> {% endfor %}</td>
            <td class="text-left">{{ product.model }}</td>
            <td class="text-right">{{ product.quantity }}</td>
            <td class="text-right">{{ product.price }}</td>
            <td class="text-right">{{ product.total }}</td>
            <td class="text-right" style="white-space: nowrap;">{% if product.reorder %} <a href="{{ product.reorder }}" data-toggle="tooltip" title="{{ button_reorder }}" class="btn btn-primary"><i class="fa fa-shopping-cart"></i></a> {% endif %} <a href="{{ product.return }}" data-toggle="tooltip" title="{{ button_return }}" class="btn btn-danger"><i class="fa fa-reply"></i></a></td>
          </tr>
          {% endfor %}
          {% for voucher in vouchers %}
          <tr>
            <td class="text-left">{{ voucher.description }}</td>
            <td class="text-left"></td>
            <td class="text-right">1</td>
            <td class="text-right">{{ voucher.amount }}</td>
            <td class="text-right">{{ voucher.amount }}</td>
            {% if products %}
            <td></td>
            {% endif %} </tr>
          {% endfor %}
            </tbody>
          
          <tfoot>
          
          {% for total in totals %}
          <tr>
            <td colspan="3"></td>
            <td class="text-right"><b>{{ total.title }}</b></td>
            <td class="text-right">{{ total.text }}</td>
            {% if products %}
            <td></td>
            {% endif %}
          </tr>
          {% endfor %}
            </tfoot>
          
        </table>
      </div>

      <div class="order-info-products">
        <div class="order-info-products-heading">
          <span style="font-size: 14px;"><b>Вы заказали</b></span>
          <span>{{ products_count}} товара - {{ products_weight_total }}кг</span>
        </div>
        {% for product in products %}
          <div class="order-info-products-row">
            <div class="order-info-products-row-left">
              <img src="{{ product.thumb }}" alt="{{ product.name }}">
              <div class="order-info-products-row-left-info">
                <span>{{ product.name }}</span>
                <br>
                <span>{{ product.quantity }} шт ({{ product.weight }}{{ product.weight_unit }})</span>
              </div>
            </div>
            <div class="order-info-products-row-center">{{ product.price }}</div>
            <div class="order-info-products-row-right">
              {% if product.reorder %}
                <a href="{{ product.reorder }}" class="btn">Купить повторно</a>
              {% endif %}
              <a href="{{ product.return }}" class="btn">Вернуть</a>
              <button type="button" class="btn"><i class="fa fa-heart-o"></i></button>
            </div>
          </div>
        {% endfor %}
        {% for voucher in vouchers %}
          <div class="order-info-products-row">
            <div class="order-info-products-row-left">
              <div class="order-info-products-row-left-info">
                <span>{{ voucher.description }}</span>
                <br>
                <span>1</span>
              </div>
            </div>
            <div class="order-info-products-row-center">{{ voucher.amount }}</div>
            <div class="order-info-products-row-right"></div>
          </div>
        {% endfor %}
      </div>

      {% if comment %}
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td class="text-left">{{ text_comment }}</td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="text-left">{{ comment }}</td>
          </tr>
        </tbody>
      </table>
      {% endif %}

      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}